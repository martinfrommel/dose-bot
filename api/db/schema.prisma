datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Enums
enum Unit {
  MG
  ML
  G
  IU
}

enum Role {
  Admin
  User
}

model Dose {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  amount        Float
  unit          Unit      @default(G)
  substance     Substance @relation(fields: [substanceId, substanceName, substanceSlug], references: [id, name, slug], onDelete: Cascade)
  substanceId   String
  substanceName String
  substanceSlug String
}

model Substance {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String?
  unit        Unit?
  slug        String
  doses       Dose[]

  @@unique([name, id, slug])
}

model ApiKey {
  id          String    @id @default(cuid())
  name        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  hashedKey   String
  enabled     Boolean   @default(true)
  validUntil  DateTime?
  description String?
}

model User {
  id                  Int              @id @default(autoincrement())
  email               String           @unique
  avatarUrl           String?
  hashedPassword      String
  salt                String
  role                Role             @default(User)
  resetToken          String?
  resetTokenExpiresAt DateTime?
  webAuthnChallenge   String?          @unique
  credentials         UserCredential[]
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
}

model UserCredential {
  id         String  @id
  userId     Int
  user       User    @relation(fields: [userId], references: [id])
  publicKey  Bytes
  transports String?
  counter    BigInt
}
