datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Enums
enum Unit {
  MG
  ML
  G
  IU
}

model Dose {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount Float
  unit Unit @default(G)
}

model Substance {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  description String?
  doses Dose[]
}

model ApiKey {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  key String @unique
  enabled Boolean @default(true)
  validUntil DateTime?
}
